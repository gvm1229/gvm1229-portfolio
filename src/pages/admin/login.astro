---
/**
 * 어드민 로그인 페이지
 * 이미 로그인된 사용자는 /admin 으로 리다이렉트한다.
 */
import "@/styles/global.css";
import LoginForm from "@/components/admin/LoginForm";

// 컬러 스킴 적용 (BaseLayout 없이 단독 페이지)
const colorScheme = (import.meta.env.PUBLIC_COLOR_SCHEME ?? "gray") as string;
const validScheme = ["blue", "gray", "beige", "blackwhite"].includes(
    colorScheme
)
    ? colorScheme
    : "gray";
---

<!doctype html>
<html lang="ko" data-color-scheme={validScheme}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin Login — FoliumOnline</title>
        {/* robots: 검색 엔진이 어드민 페이지를 인덱싱하지 않도록 */}
        <meta name="robots" content="noindex, nofollow" />
        {/* 다크모드 깜빡임 방지 */}
        <script is:inline>
            (function () {
                const theme = localStorage.getItem("theme") || "system";
                const systemDark = window.matchMedia(
                    "(prefers-color-scheme: dark)"
                ).matches;
                if (theme === "dark" || (theme === "system" && systemDark)) {
                    document.documentElement.classList.add("dark");
                }
            })();
        </script>
        {/* 이미 로그인된 경우 /admin 으로 즉시 리다이렉트 */}
        <script is:inline>
            (async function () {
                // supabase가 로드되기 전이므로 localStorage의 sb-*-auth-token 키로 빠르게 확인
                const hasSession = Object.keys(localStorage).some(
                    (k) => k.startsWith("sb-") && k.endsWith("-auth-token")
                );
                if (hasSession) window.location.href = "/admin";
            })();
        </script>
    </head>
    <body class="bg-(--color-surface) text-(--color-foreground)">
        <LoginForm client:load />
    </body>
</html>
