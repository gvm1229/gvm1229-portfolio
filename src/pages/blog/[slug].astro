---
/**
 * 블로그 포스트 상세 페이지
 * - Keystatic/Content Collections 기반
 */
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { formatPubDateKST } from "@/lib/blog";

export async function getStaticPaths() {
    try {
        const [posts, tagsEntries] = await Promise.all([
            getCollection("posts"),
            getCollection("tags").catch(() => []),
        ]);
        const slugToTagName = new Map(
            tagsEntries.map((t) => [t.id, t.data.name])
        );
        const slugToTagColor = new Map(
            tagsEntries
                .filter((t) => t.data.color?.trim())
                .map((t) => [
                    t.id,
                    t.data.color!.trim().replace(/^['"]|['"]$/g, ""),
                ])
        );
        return posts.map((post) => ({
            params: { slug: post.slug },
            props: {
                post,
                tagDisplay: (post.data.tags ?? []).filter(Boolean).map((s) => ({
                    slug: s,
                    name: slugToTagName.get(s) ?? s,
                    color: slugToTagColor.get(s),
                })),
            },
        }));
    } catch {
        return [];
    }
}

const { post, tagDisplay } = Astro.props;
const { Content } = await post.render();
const category = post.data.category?.trim() ?? "";
const pageTitle = category
    ? `${category} | ${post.data.title} - FoliumOnline`
    : `${post.data.title} - FoliumOnline`;
---

<BaseLayout title={pageTitle} description={post.data.description ?? ""}>
    <article class="max-w-3xl mx-auto">
        <header class="mb-6">
            <h1
                class="text-4xl font-bold mb-2 flex flex-wrap items-baseline gap-x-2 gap-y-1"
            >
                {
                    category ? (
                        <>
                            <span class="text-4xl font-bold text-(--color-highlight)">
                                {category}
                            </span>
                            <span class="text-(--color-muted)" aria-hidden>
                                |
                            </span>
                        </>
                    ) : null
                }
                <span>{post.data.title}</span>
            </h1>
            {
                post.data.description && (
                    <p class="text-lg text-(--color-muted)">
                        {post.data.description}
                    </p>
                )
            }
            <time
                class="text-sm text-(--color-muted) block mt-2"
                datetime={post.data.pubDate.toISOString()}
            >
                {formatPubDateKST(post.data.pubDate)}
            </time>
            {
                tagDisplay.length > 0 && (
                    <div class="flex flex-wrap gap-2 mt-4" aria-label="태그">
                        {tagDisplay.map((t) => (
                            <a
                                href={`/blog?tag=${encodeURIComponent(t.slug)}`}
                                class="px-2 py-1 text-xs rounded-full bg-(--color-tag-bg) text-(--color-tag-fg) hover:opacity-85 transition-opacity"
                                style={
                                    t.color
                                        ? {
                                              backgroundColor: t.color,
                                              color: "#fff",
                                          }
                                        : undefined
                                }
                            >
                                {t.name}
                            </a>
                        ))}
                    </div>
                )
            }
        </header>
        <div class="post-content prose dark:prose-invert max-w-none">
            <Content />
        </div>
    </article>
</BaseLayout>

<script>
    import { getMermaidConfig } from "@/lib/mermaid-themes";
    /**
     * Markdoc 본문 내 ```mermaid 코드 블록을 클라이언트에서 Mermaid로 렌더링.
     * Markdoc 출력: pre[data-language="mermaid"] (내부에 code 없음) 또는 pre > code.language-mermaid
     */
    async function renderMermaidBlocks() {
        const container = document.querySelector(".post-content");
        if (!container) return;
        const mermaidPreBlocks = container.querySelectorAll(
            'pre[data-language="mermaid"]'
        );
        const legacyBlocks = container.querySelectorAll(
            "pre > code.language-mermaid"
        );
        const blocks =
            mermaidPreBlocks.length > 0
                ? Array.from(mermaidPreBlocks)
                : Array.from(legacyBlocks)
                      .map((code) => code.closest("pre"))
                      .filter(Boolean);
        if (blocks.length === 0) return;
        const mermaid = (
            await import("https://cdn.jsdelivr.net/npm/mermaid@11/dist/mermaid.esm.min.mjs")
        ).default;
        const root = document.documentElement;
        const isDark = root.classList.contains("dark");
        const scheme = root.getAttribute("data-color-scheme");
        const { theme, themeVariables } = getMermaidConfig(scheme, isDark);
        mermaid.initialize({
            startOnLoad: false,
            theme,
            themeVariables,
        } as { startOnLoad?: boolean; theme?: string });
        for (const pre of blocks) {
            const chartDefinition = pre?.textContent?.trim();
            if (!chartDefinition) continue;
            const id = "mermaid-" + Math.random().toString(36).slice(2, 9);
            const wrap = document.createElement("div");
            wrap.className = "mermaid-rendered my-6 flex justify-center";
            wrap.setAttribute("data-mermaid-id", id);
            wrap.setAttribute("data-mermaid-definition", chartDefinition);
            try {
                const { svg } = await mermaid.render(id, chartDefinition);
                wrap.innerHTML = svg;
            } catch (err) {
                console.warn("[blog post] Mermaid render failed:", err);
                wrap.innerHTML = `<pre class="text-sm text-(--color-muted) overflow-auto p-4 rounded border border-(--color-border)">${chartDefinition}</pre>`;
            }
            pre?.replaceWith(wrap);
        }
    }
    async function rerenderMermaidOnThemeChange() {
        const rendered = document.querySelectorAll(
            ".mermaid-rendered[data-mermaid-definition]"
        );
        if (rendered.length === 0) return;
        const mermaid = (
            await import("https://cdn.jsdelivr.net/npm/mermaid@11/dist/mermaid.esm.min.mjs")
        ).default;
        const root = document.documentElement;
        const isDark = root.classList.contains("dark");
        const scheme = root.getAttribute("data-color-scheme");
        const { theme, themeVariables } = getMermaidConfig(scheme, isDark);
        mermaid.initialize({
            startOnLoad: false,
            theme,
            themeVariables,
        } as { startOnLoad?: boolean; theme?: string });
        for (const wrap of rendered) {
            const def = wrap.getAttribute("data-mermaid-definition");
            if (!def) continue;
            const id = "mermaid-" + Math.random().toString(36).slice(2, 9);
            try {
                const { svg } = await mermaid.render(id, def);
                wrap.innerHTML = svg;
            } catch (err) {
                console.warn("[blog post] Mermaid re-render failed:", err);
            }
        }
    }
    if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", renderMermaidBlocks);
    } else {
        renderMermaidBlocks();
    }
    window.addEventListener("themechange", rerenderMermaidOnThemeChange);
</script>
