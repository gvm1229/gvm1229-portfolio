---
/**
 * 헤더 컴포넌트
 * - 모바일: 로고 + 햄버거 버튼 (메뉴 토글)
 * - 태블릿 이상: 로고 + 전체 네비(About, Resume, Portfolio, Blog, Admin(dev), GitHub, 테마)
 */
import ThemeToggle from "@/components/ThemeToggle";

const isDev = import.meta.env.DEV;
---

<header
    class="sticky top-0 z-50 border-b border-(--color-border) bg-(--color-surface) backdrop-blur-sm"
    id="site-header"
>
    <nav
        class="container mx-auto flex items-center justify-between gap-4 px-4 py-4"
    >
        <a
            href="/"
            class="text-xl font-bold text-(--color-foreground) transition-opacity hover:opacity-80"
        >
            FoliumOnline
        </a>

        {/* 햄버거: 모바일만 */}
        <button
            type="button"
            class="tablet:hidden rounded-md p-2 text-(--color-foreground) hover:bg-(--color-surface-subtle)"
            aria-label="메뉴 열기"
            aria-expanded="false"
            aria-controls="header-nav"
            id="header-menu-btn"
        >
            <svg
                class="menu-icon-open h-6 w-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
            <svg
                class="menu-icon-close hidden h-6 w-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>

        {/* 네비: 모바일에서는 드로어로, 태블릿+에서는 항상 표시 */}
        <div
            id="header-nav"
            class="header-nav-drawer tablet:flex tablet:flex-row tablet:items-center tablet:gap-4 tablet:border-0 tablet:py-0 hidden flex-col gap-1 border-t border-(--color-border) py-4"
            role="navigation"
        >
            <a
                href="/about"
                class="rounded-md px-3 py-2 text-sm font-medium text-(--color-muted) transition-colors hover:text-(--color-foreground) hover:opacity-80"
            >
                About me
            </a>
            <a
                href="/resume"
                class="rounded-md px-3 py-2 text-sm font-medium text-(--color-muted) transition-colors hover:text-(--color-foreground) hover:opacity-80"
            >
                Resume
            </a>
            <a
                href="/portfolio"
                class="rounded-md px-3 py-2 text-sm font-medium text-(--color-muted) transition-colors hover:text-(--color-foreground) hover:opacity-80"
            >
                Portfolio
            </a>
            <a
                href="/blog"
                class="rounded-md px-3 py-2 text-sm font-medium text-(--color-muted) transition-colors hover:text-(--color-foreground) hover:opacity-80"
            >
                Blog
            </a>
            {
                isDev && (
                    <a
                        href="/admin"
                        class="rounded-md px-3 py-2 text-sm font-medium text-(--color-muted) transition-colors hover:text-(--color-foreground) hover:opacity-80"
                    >
                        Admin
                    </a>
                )
            }
            <a
                href="https://github.com/"
                target="_blank"
                rel="noopener noreferrer"
                class="rounded-md p-2 text-(--color-muted) transition-colors hover:text-(--color-foreground) hover:opacity-80"
                aria-label="GitHub"
            >
                <svg
                    class="h-5 w-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                >
                    <path
                        fill-rule="evenodd"
                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                        clip-rule="evenodd"></path>
                </svg>
            </a>
            <ThemeToggle client:load />
        </div>
    </nav>
</header>

<style is:global>
    /* 모바일: 드로어가 열리면 표시 (tablet 이상에서는 tablet:flex가 적용되어 항상 표시) */
    @media (max-width: 47.9375rem) {
        #header-nav.header-nav-open {
            display: flex !important;
        }
        #site-header nav {
            flex-wrap: wrap;
        }
        #header-nav {
            width: 100%;
            order: 99;
            margin-left: -1rem;
            margin-right: -1rem;
            padding-left: 1rem;
            padding-right: 1rem;
            background: var(--color-surface);
        }
    }
</style>

<script>
    // @ts-nocheck
    (function () {
        const btn = document.getElementById("header-menu-btn");
        const nav = document.getElementById("header-nav");
        if (!btn || !nav) return;

        const openIcon = btn.querySelector(".menu-icon-open");
        const closeIcon = btn.querySelector(".menu-icon-close");

        function isOpen() {
            return nav.classList.contains("header-nav-open");
        }

        function setOpen(open) {
            nav.classList.toggle("header-nav-open", open);
            btn.setAttribute("aria-expanded", String(open));
            btn.setAttribute("aria-label", open ? "메뉴 닫기" : "메뉴 열기");
            if (openIcon) openIcon.classList.toggle("hidden", open);
            if (closeIcon) closeIcon.classList.toggle("hidden", !open);
        }

        btn.addEventListener("click", () => setOpen(!isOpen()));

        // 태블릿 이상에서 리사이즈 시 드로어 닫기
        const mq = window.matchMedia("(min-width: 48rem)");
        mq.addEventListener("change", (e) => {
            if (e.matches) setOpen(false);
        });
    })();
</script>
